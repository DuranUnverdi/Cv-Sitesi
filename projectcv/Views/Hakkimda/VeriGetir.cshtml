@model projectcv.Models.Entity.TBLABOUT
@{
    ViewBag.Title = "VeriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Hakkimda", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ID)
        @Html.TextBoxFor(m => m.ID, new { @class = "form-control" })
        <br />
        @Html.Label("Ad")
        @Html.TextBoxFor(m => m.NAME, new { @class = "form-control" })
        <br />
        @Html.Label("Soyad")
        @Html.TextBoxFor(m => m.SURNAME, new { @class = "form-control" })
        <br />
        @Html.Label("Adres")
        @Html.TextBoxFor(m => m.ADDRESS, new { @class = "form-control" })
        <br />
        @Html.Label("Telefon")
        @Html.TextBoxFor(m => m.PHONE, new { @class = "form-control" })
        <br />
        @Html.Label("Mail")
        @Html.TextBoxFor(m => m.MAİL, new { @class = "form-control" })
        <br />
        @Html.Label("Haakımızda")
        @Html.TextAreaFor(m => m.ABOUT, new { @class = "form-control" })
        <br />

        <button class="btn btn-primary">Güncelle</button>
    </div>
}

